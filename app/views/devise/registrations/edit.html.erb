<% provide(:title, 'プロフィール編集')%>
<div class="center jumbotron">
  <h1>プロフィール編集</h1>
  <aside>
    <div class="gravatar_edit text-left">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">プロフィール写真を変更する</a>
    </div>
  </aside>
  <br /><br /><br />
  <div class="row text-left">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: user_registration_path, method: :put) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <h4>＜公開情報＞</h4>
        <div class="field">
          <%= f.label :user_name, "ユーザーネーム" %>
          <%= f.text_field :user_name, autofocus: true, autocomplete: "name" %>
        </div>
        <div class="field">
          <%= f.label :pen_name, "ニックネーム" %>
          <%= f.text_field :pen_name, autofocus: true, autocomplete: "name" %>
        </div>
        <div class="field">
          <%= f.label :website, "WEBサイト" %>
          <%= f.text_field :website, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :introduction, "自己紹介" %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        <h4>＜非公開情報＞</h4>
        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :tel, "電話番号" %>
          <%= f.text_field :tel, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :sex, "未選択" %>
          <%= f.radio_button :sex, 0 %>
          <%= f.label :sex, "男性" %>
          <%= f.radio_button :sex, 1 %>
          <%= f.label :sex, "女性" %>
          <%= f.radio_button :sex, 2 %>
        </div>
        <br />
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="actions">
          <%= f.submit "プロフィール編集完了", class:"btn btn-primary" %>
        </div>
      <% end %>
      <br/>
      <%= link_to 'パスワード編集', pass_edit_path %>
       <h4>＜アカウント削除＞</h4>
        <%= button_to "アカウントを削除する", user_registration_path,
        class:"btn btn-danger", data: { confirm: "本当に削除しますか？" }, method: :delete %>
    </div>
  </div>
</div>
