<li id="photo-<%= photo.id %>">
  <span class="title">
    <%= link_to "投稿者：#{photo.user.user_name}", user_path(photo.user) %><br>
    <%= link_to "タイトル：#{photo.title}", photo %><br>
  </span>
  <span class="timestamp">
    投稿時間 <%= time_ago_in_words(photo.created_at) %> ago.
    <% if current_user == photo.user %>
      <%= link_to "delete", photo, method: :delete,
          data: { confirm: "本当に削除しますか?" } %>
    <% end %>
  </span>
</li>

<span class="picture center">
  <%= image_tag photo.display_image if photo.image.attached? %>
</span>
